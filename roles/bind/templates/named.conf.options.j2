options {
    directory "/var/cache/bind";
    forwarders {
        {{ bind_forwarders | default('8.8.8.8') }};
        {{ bind_secondary_forwarders | default('8.8.4.4') }};
    };
    listen-on { any; };
    allow-query { any; };
    recursion yes;
    dnssec-validation auto;
    auth-nxdomain no;
    listen-on-v6 { any; };
